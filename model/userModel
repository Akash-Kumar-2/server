const mongoose = require('mongoose');

const userSchema = new mongoose.Schema({
name: {
    type: String
},
username: {
    type: String,
    required: true,
    unique: true
},
email: {
  type: String,
  required: true,
  unique: true  
},
password: {
  type: String,
  minLength: 8,
  required: true
},
viewAs:{
    type: String,
    enum:['Job Seeker', 'Recruiter'],
    default: 'Job Seeker'
},
profilepic: {
    type: String,
    deafult: ""
},
connections: {
    type:[String],
    default: []
},
bio: {
    type: String,
    default: ''
},
isFrozen :{
    type: Boolean,
    default: false
}
},
{
    timestamps: true
});

const User = mongoose.model('User', userSchema);
module.exports = User;